            <VBox prefHeight="26.0" prefWidth="102.0" />
            <VBox prefHeight="26.0" prefWidth="283.0" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TextField fx:id="idDispo" prefHeight="26.0" prefWidth="28.0" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="Salir" onAction="#Salir" prefHeight="26.0" prefWidth="95.0" text="Salir" textAlignment="CENTER" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
