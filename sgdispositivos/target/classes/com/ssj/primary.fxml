   <children>
      <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Gestion de Dispositivos">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <TextArea fx:id="listaDisp" disable="true" prefHeight="621.0" prefWidth="931.0" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="Añadir" alignment="CENTER" onAction="#switchToSecondary" prefHeight="26.0" prefWidth="184.0" text="Añadir Dispositivo" />
            <Button fx:id="Modificar" onAction="#ModDisp" prefHeight="26.0" prefWidth="184.0" text="Modificar Dispositivo" />
